@require 'fonts'

body {
    background-color: #fffff;
    font-family: 'Inter', -apple-system, sans-serif;
}

html {    
    background-size: cover;
    background-color: #fffff
}

.sidebarColor {
    background-size: cover;
    background-color: #fffff
}

.widget {
background-color: #fffff;
}

// .home .hero img
//   max-width 450px!important

header.navbar .logo {
    height: 5.8rem;
    min-width: auto; 
    margin: 5% 0;   
}

header.navbar, header.navbar .links {
    background-color: $headerColor;
}

header.navbar {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: 5rem;
    height: auto;
    line-height: 6.5rem;
}

header.navbar .links {
    padding-right: 3rem;
    top: 0.6rem;
}

.nav-item a {
    // font-weight: 1000;
    font-family: 'Inter-Bold', -apple-system, sans-serif;
    font-size: 18px;
}

@media screen and (min-width: 1179px) { 
        .nav-links {
        padding: 0 3rem !important;
        transition: all 0.2s ease;
    }
}

.nav-links {
    padding: 0;
    transition: all 0.2s ease;
}

.navbar .site-name {
    display: none;    
}

.search-box {
  order: 1;
  margin-right: 0;
  margin-left: 1rem;

  .suggestions {
    left: auto !important;
    right: 0 !important;
  }
}

.links .search-box input {
    border: 1px solid #2C2C2C;
    box-shadow: 0px 4px 4px #DCC3D3;
    background: #FFF url(/assets/search.svg) 0.6rem 0.5rem no-repeat
}

.outbound {
    display: none !important;    
}

ul.suggestions {
    margin-top: 45px;
}

main.home {
    padding: 10rem 2rem 0;
}

h1#main-title {
    padding: 4rem 0;
    padding-bottom: 3.5rem;
    font-size: 34.59px;
    font-family: 'Inter Bold', -apple-system, sans-serif;
}

.theme-default-content:not(.custom) > h1 {
    padding-top: 9.5rem;
}

.theme-default-content:not(.custom) > h2,
.theme-default-content:not(.custom) > h3,
.theme-default-content:not(.custom) > h4,
.theme-default-content:not(.custom) > h5 {
    padding-top: 9.5rem;
}

aside.sidebar {
    top: 8rem;
    padding:0 40px;
    padding-right: 18px;
}

section .sidebar-heading {
    padding: 0;
    margin-left: -18px;
}

.sidebar ul.sidebar-sub-headers {
    padding-left: 0;
}

.sidebar-group li a.sidebar-link {
    padding-left: 0px;
}

.sidebar-group li a.sidebar-link.active {
    border: none;
    padding-left: 0px;
    margin-left: 4px;
}

.sidebar-group li.sidebar-sub-header a.sidebar-link {
    padding-left: 50px;
}

.sidebar-group li.sidebar-sub-header a.sidebar-link.active {
    border-left: 0.1rem solid #ff62c4;
    padding-left: 46px;
}

.sidebar-sub-headers a.sidebar-link.active {
    // border-left: #ff62c4;
    border-left: 0.1rem solid #ff62c4;
    padding-left: 50px - 0.25rem;
    // border-left: solid;
}

.sidebar-group.is-sub-group.depth-1 > ul.sidebar-group-items {
    padding-left: 22px;
    margin-left: 4px; 
}

.sidebar-group.is-sub-group.depth-1 > ul.sidebar-group-items.active {
    padding-left: 16px;
    margin-left: 4px; 
}

.sidebar-group.is-sub-group.depth-2 > ul.sidebar-group-items {
    padding-left: 20px;
    // margin-left: 34px; 
}

.sidebar-group.depth-2 > a.sidebar-heading {
    padding-left: 45px;
}

.sidebar-group.is-sub-group > .sidebar-group-items > li > .sidebar-link {
    padding-left: 0px;  
}

.sidebar-group.is-sub-group > .sidebar-group-items > li > .sidebar-link.active {
    // border-left: 0.1rem solid #ff62c4;
    padding-left: 0px;
    margin-left: 0px;
}

.sidebar-links li ul.sidebar-sub-headers .sidebar-sub-header a.sidebar-link {
    padding-left: 30px;
}

.sidebar-links li ul.sidebar-sub-headers .sidebar-sub-header a.sidebar-link.active {
    padding-left: 24px;
    // margin-left: 34px;
}

// .sidebar-group.is-sub-group > .sidebar-heading {
//     padding-left: 24px;    
// }

section.sidebar-group .depth-0 > ul li a.sidebar-link.active {
    border-left: 0.1rem solid #ff62c4;
    padding-left: 22px;
}

section.sidebar-group .depth-1 a.sidebar-heading {
    font-size:1rem;
    padding-left: 24px;
}

section.sidebar-group .depth-1 a.sidebar-heading.active {
    border-left: none;
    padding-left: 28px;
}

section.sidebar-group .depth-2 a.sidebar-heading {
    padding-left: 22px;
}

section.sidebar-group .depth-2 a.sidebar-heading.active {
    // border-left: 0.1rem solid #ff62c4;
    padding-left: 21px;
}



.sidebar-heading-normal {
    color: #2c2c2c;  
}

.sidebar-heading.active {
    font-weight: 600;
    color: #ff62c4;    
}

.sidebar-group.depth-2 > a.sidebar-heading {
    font-size: 14px !important;    
}

p.description {
    display: none;
}

.main-menu {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 8rem;
}

.social-menu {
    display: flex;
    margin-bottom: 8rem;
}

.etc-menu {
    display: block;
    margin-bottom: 8rem;
}

.main-menu_container {
    display: flex;
    flex-direction: row;
    flex: 1;
    flex-basis: 50%;

}

.social-menu_container {
    display: flex;
    flex-direction: row;
}

@media screen and (max-width: 1179px) { 
    .main-menu_container {
        display: flex;
        flex-direction: row;
        flex: 1;
        flex-basis: 100%;
    }
    .social-menu_container {
        display: flex;
        flex-direction: row;
    }
}

.menu-items {
    padding: .5em;
    width: auto;
}

// Sidebar
section .sidebar-heading {
    color: $textColor;
    font-size: 16px;
}

.sidebar-links a.sidebar-link {
    color: $textColor;
    font-size: 16px;
}

.sidebar-link .sidebar-sub-headers a.sidebar-link {
    color: $thirdListTextColor;
    font-size: 14px;
}

.sidebar-links li ul.sidebar-sub-headers .sidebar-sub-header a.sidebar-link {
    font-size: 12px;
}

a span.arrow.down,
a span.arrow.right {
    display:none;
}